<!DOCTYPE html>
<html>
<csp:include page="partials/head.csp">
<body>

	<script language="sql" name="FilmList">
		SELECT ID, Description, Length, Rating, Title, Category->CategoryName 
		FROM Cinema.Film
		WHERE PlayingNow = 1
		#($SELECT(%request.Data("CategoryList", 1) '= "*":
			" AND Category = " _ %request.Data("CategoryList", 1), 1:""))#

		#($SELECT(%request.Data("RatingList",1) '= "*":
			" AND Rating = '" _ %request.Data("RatingList",1)_ "'",
		1:""))#
		ORDER BY Title
	</script>


	<div class="container">
		<h1>Resultado de busca</h1>
		<table class="table">
			
			<csp:while condition="Filmlist.Next()">
			<tr>
				<td>
					<b>#(FilmList.Get("Title"))#</b><br>
					#(FilmList.Get("Description"))# <br>
					<b>Gênero:</b> #(FilmList.Get("CategoryName"))#
					<b>Duração:</b> #(FilmList.Get("Length"))#
					<b>Rating</b> #(FilmList.Get("Rating"))# <br><br>
				</td>
				<td>
					<a href='ShowTimes.csp?FilmID=#(FilmList.Get("ID"))#'>
						<img src="images/ShowTimes.gif" alt="">
					</a>
				</td>
			</tr>
			</csp:while>
		</table>
	</div>



</body></html>